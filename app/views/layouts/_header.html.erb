<header>
<%# if logged_in? %>
<%# else %>
<%# end %>
	<div class="row topbar">

		<div class="grid-80 centered clearfix">
			<div class="grid-40 lefted logo">
			<h1>
			345 Thrive
			</h1>
			<%= link_to root_path, class: 'lefted' do %>
			<%= image_tag "logo.png", alt: "logo", height: "48px" %>
			<% end %>

			</div><!-- grid-50 lefted -->

			<div class="grid-60 righted text-right">
			<nav>
				<div class="dropdown">
					<button onclick="expandDropdown()" class="trigger">
						<span class="bar"></span>
						<span class="bar"></span>
						<span class="bar"></span>
					</button>
					<div id="dropdownList" class="dropdown-content">
					<% if logged_in? %>
					<%= link_to "USERS", users_path %>
					<% else %>
					<%= link_to "HOME", root_path %>
					<% end %>
					<%= link_to "ABOUT", about_path %>
					<% if logged_in? %>
					<%= link_to "PROFILE", current_user %>
					<%= link_to "SETTINGS", edit_user_path(current_user) %>
					<%= link_to "LOG OUT", logout_path, class: "last login", method: "delete" %>
					<% else %>
					<%= link_to "SIGN UP", signup_path, class: "last login" %>
					<% end %>
					</div><!-- dropdown-content -->

				</div><!-- dropdown -->

			</nav>
			</div><!-- grid-60 righted text-right -->
		</div><!-- grid-80 centered clearfix -->

	</div><!-- row topbar -->

</header>