			<div id="position-<%= position.id %>" class="row-100 centered experience-card">
			<div class="column">

						<%= if position.picture?
								image_tag position.picture.url, class: "company-logo"
							else
								image_tag "company-logo-default.png", class: "company-logo"
							end %>

			</div>
			<div class="column experience-summary">
			<span class="column">
					<h4 class="job-title">
					<%= position.title %>
					</h4>
			</span>
					<p class="company-name">
					<%= position.company %>
					</p>
					<p class="time-location">
					<% if position.start_date? %>
					<%= position.start_date.try(:strftime, "%B %e %Y") %> to <%= position.end_date.try(:strftime, "%B %e %Y") %>
					<% end %><%# if position start_date? %>
					</p>
			</div>
			<div class="column righted clearfix">
			<% if current_user?(@user) %>
			<a href="../positions/<%= position.id %>/edit">
			<small>
			Edit
			</small>
			<i class="material-icons sub-menu">mode_edit</i>
			</a>

			<%= link_to position, method: :delete, data: { confirm: "You sure?" } do %>
			<small class="f400">
			Delete
			</small>
			<i class="material-icons sub-menu">delete</i>
			<% end %><%# linke_to delete %>

			<% end %><%# if current_user? %>
			</div>
			<div class="column grid-100">
			<p class="company-summary">
			<%= position.summary %>
			</p>
			</div><!-- column -->
			</div><!-- row-90 work-experience-card -->
