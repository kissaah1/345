
			<%= form_for Position.find(params[:id]) do |f| %>
				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:company, "Company Name", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :company, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:title, "Title", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :title, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:summary, "Summary", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :summary, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">

					<div class="column">
					<h3 class="text-left">
					<%= label_tag(:start_date, "Start Date", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= f.text_field :start_date, class: 'form-control' %>
					</div><!-- field -->
					</div><!-- column -->

					<div class="column">
					<h3 class="text-left">
					<%= label_tag(:end_date, "End Date", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= f.text_field :end_date, class: 'form-control' %>
					</div><!-- field -->
					</div><!-- column -->

				</div><!-- row-90 centered -->


				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:is_current, "Is this current position?") %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= check_box_tag(:is_current) %>
					</div><!-- field -->
				</div><!-- question -->


				<div class="row-90 centered question">
					<%= f.submit "Edit Postion", class: "button extend primary" %>
				</div><!-- question -->


			<div class="row-90 centered form-field">
			<%= f.label :picture, class: "upload button" do %>
			<span class="column">
			<i class="material-icons">photo_library</i>
			</span>
			<span class="column">
			Choose photo..
			</span>
			<% end %>
				<%= f.file_field :picture, class: "upload", accept: 'image/jpeg,image/gif,image/png' %>
				<%= f.submit "Save", class: "upload button" %>
			</div><!-- form-field -->
<script type="text/javascript">
  $('#position_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>


					<% end %>
