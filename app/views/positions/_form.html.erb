
			<%= form_for Position.find(params[:id]) do |f| %>
				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:company, "Company Name", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :company, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:title, "Title", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :title, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:summary, "Summary", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :summary, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">

					<div class="column">
					<h3 class="text-left">
					<%= label_tag(:start_date, "Start Date", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= f.text_field :start_date, class: 'form-control' %>
					</div><!-- field -->
					</div><!-- column -->

					<div class="column">
					<h3 class="text-left">
					<%= label_tag(:end_date, "End Date", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= f.text_field :end_date, class: 'form-control' %>
					</div><!-- field -->
					</div><!-- column -->

				</div><!-- row-90 centered -->


				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:is_current, "Is this current position?") %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= check_box_tag(:is_current) %>
					</div><!-- field -->
				</div><!-- question -->


				<div class="row-90 centered question">
					<%= f.submit "Edit Postion", class: "button extend primary" %>
					<% end %>
				</div><!-- question -->

