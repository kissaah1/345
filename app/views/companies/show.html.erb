<% provide(:title, "My Company") %>
<section class="centered bottomfix">
	<div class="row">
		<div class="columns grid-80 centered clearfix">
		<h2><%= @company.name %></h2>


				<div id="company-<%= @company.id %>" class="column my-ally">
					<div class="ally-profile">
					<div class="column ally-avator lefted">

						<% if Rails.env.production? %>
						<%= if @company.picture?
								image_tag @company.picture.url, class: "profile-thumb"
							else
								image_tag "company-logo-default.png", class: "profile-thumb"
							end %>
						<% else %><%#-- if Rails.env.production --%>
						<%= if @company.picture?
								image_tag @company.picture.url, class: "profile-thumb"
							else
								image_tag "company-logo-default.png", class: "profile-thumb"
							end %>
						<% end %><%#-- if Rails.env.production? --%>

					</div><!-- ally-avator -->

					<div class="column ally-info">
						<p class="ally-name">
							<span class="column">
								<a href="#">
								<span class="column">
								<%= @company.name %>
								</span>
								<span class="column sub-menu">
								<i class="material-icons">launch</i>
								</span>
								</a>
							</span>
						</p>
					</div><!-- column ally-info -->

					<div class="column sub-menu righted clearfix">
						<% if current_user?(@user) %>
							<%= link_to edit_company_path do %>
							<small class="f400">
							Edit
							</small>
							<i class="material-icons">mode_edit</i>
							<% end %>
						<% end %>
					</div><!-- sub-menu -->

					<div class="column ally-info">
					<p class="ally-title">
						<%= @company.industry %>
					</p>
					<p class="ally-title">
						<%= @company.website %>
					</p>

						<p class="ally-title">
							<%= @company.summary %>
						</p>

					</div><!-- ally-info -->
					</div><!-- ally-profile -->

					</div>


		</div><!-- columns -->
	</div><!-- row -->
</section><!-- bottomfix -->

