<%= form_for Company.find(params[:id]) do |f| %>
				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:name, "Company Name", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :name, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:industry, "Industry", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :industry, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:website, "Website", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_field :website, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->

				<div class="row-90 centered">
					<h3 class="text-left">
					<%= label_tag(:summary, "Website", class: 'form-control') %>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :summary, class: 'form-control' %>
					</div><!-- field -->
				</div><!-- question -->



				<div class="row-90 centered question">
					<%= f.submit "Create a Company", class: "button extend primary" %>
				</div><!-- question -->

			<div class="row-90 centered form-field">
			<%= f.label :picture, class: "upload button" do %>
			<span class="column">
			<i class="material-icons">photo_library</i>
			</span>
			<span class="column">
			Choose photo..
			</span>
			<% end %>
				<%= f.file_field :picture, class: "upload", accept: 'image/jpeg,image/gif,image/png' %>
				<%= f.submit "Save", class: "upload button" %>
			</div><!-- form-field -->
<script type="text/javascript">
  $('#compnay_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

					<% end %>
