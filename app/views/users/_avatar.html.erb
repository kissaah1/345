<section class="centered setting-section">
	<div class="row">
		<div id="avator" class="columns grid-100 centered clearfix">

			<div class="row-80 centered form-field">
			<div class="gravatar_edit">
			<%= if @user.picture?
				image_tag @user.picture.url, class: "profile-pic"
				else
				image_tag "profile-picture-default.png", class: "profile-pic"
				end %>

				<%#= gravatar_for @user %>
				<!--a href="http://gravatar.com/emails" target="_blank" class="button secondary small">change</a-->
			</div><!-- gravator -->
			</div><!-- form-field -->

			<%= form_for User.find(params[:id]) do |f| %>
			<%= render 'shared/error_messages', object: @user %>
			<div class="row-80 centered form-field">
			<%= f.label :picture, class: "upload button" do %>
			<span class="column">
			<i class="material-icons">photo_library</i>
			</span>
			<span class="column">
			Choose photo..
			</span>
			<% end %>
				<%= f.file_field :picture, class: "upload", accept: 'image/jpeg,image/gif,image/png' %>
				<%= f.submit "Save", class: "upload button" %>
			</div><!-- form-field -->
			<% end %>
<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
		</div><!-- columns grid-100 -->
	</div><!-- row -->
</section><!-- setting-section -->
