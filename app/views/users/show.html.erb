<% provide(:title, @user.name) %>

<section class="centered profile-section">

<% if current_user?(@user) %>
<%#= render 'shared/micropost_form' %>
<%#= render 'shared/picture_form' %>
<%#= render 'shared/survey_form' %>
<% end %>

	<div class="row">
		<div class="columns grid-80 centered clearfix">
			<div class="grid-60">
				<div class="sticky-note first">
					<div class="row profile-card">
						<div class="column">
						<%= gravatar_for @user %>
						<%#= image_tag src="ploads/profile-picture-1.jpg", class: "profile-pic" %>
						</div>
					<div class="column taglines">
					<h2 class="user-name">
						Hi <%= @user.name %>!
					</h2>
					<p class="location">
						<%= @user.location %>
					</p>
					<p class="headline">
						<%= @user.headline %>
					</p>
					<p class="industry">
						<%= @user.industry %>
					</p>
					<p>
						<small>
						<%= render 'shared/stats' %>
						<%= render 'follow_form' if logged_in? %>
						</small>
					</p>
					</div>
					<div class="column righted clearfix">
						<% if current_user?(@user) %>
						<%= link_to edit_user_path(current_user) do %>
						<small>
						Edit
						</small>
						<i class="material-icons sub-menu">mode_edit</i>
						<% end %>
						<% else %>
					<% end %>
					</div>

					<div class="row-100">
						<h3>
						Summary
						</h3>
					</p>
					</div>
					<p>
				<% if @user.summary? %>
					<%= @user.summary %>
				<% else %>
					<% if current_user?(@user) %>
					<%= link_to edit_user_path do%>
						<span class="column">
						<small>
						"Update your summary.."
						</small>
						</span>
						<span class="column">
						<i class="material-icons">mode_edit</i>
						</span>
						<% end %>
						<% else %>
						<span class="column italic">
						<small>
						"This user yat update summary.."
						</small>
						</span>
						<span class="column righted">
						<i class="material-icons">info_outline</i>
						</span>
					<% end %>
				<% end %>
					</p>
					</div><!-- row profile-card -->

					<div class="bottom text-center">
				<% if @user.linkedin? %>
						<%= link_to @user.linkedin, target: "_blank" do %>
					<span class="sub-menu">
					<small>
						<%= @user.linkedin %>
					</small>
					</span>
					<i class="material-icons">launch</i>
						<% end %>
				<% end %>
				</div><!-- bottom end -->
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row work-experience">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">work</i>
						</span>
						<span class="column">
						Work Experience
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<a href="">
					<small>
					Settings
					</small>
					<i class="material-icons sub-menu">settings</i>
					</a>
				<% end %>
				</div>

				<% if @user.positions.any? %>
				<%= render @positions %>
				<%= will_paginate @positions %>
				<% end %>

			</div><!-- row work-experience -->
			<% if current_user?(@user) %>
				<div class="bottom text-center">
					<%= link_to '../positions' do %>
					Add Work Experience
					<% end %>
				</div><!-- bottom end -->
			<% end %>
			</div><!-- sticky-note end -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row skills-card">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">assignment</i>
						</span>
						<span class="column">
						Skills
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<%= link_to edit_user_path do %>
						<small>
						Edit
						</small>
						<i class="material-icons sub-menu">mode_edit</i>
					<% end %>
				<% end %>
				</div>
						<div class="column skills">
						<p>
					<% if @user.skills? %>
						<%= @user.skills %>
					<% else %>
					<% if current_user?(@user) %>
						<%= link_to edit_user_path do%>
							<span class="column">
							<small>
							"Update your skills.."
							</small>
							</span>
							<span class="column">
							<i class="material-icons">mode_edit</i>
							</span>
						<% end %>
						<% else %>
							<span class="column">
							<small>
							"This user yet updated skills.."
							</small>
							</span>
							<span class="column righted">
							<i class="material-icons">info_outline</i>
							</span>
						<% end %>
					<% end %>
						</p>
						</div><!-- column skills -->
				</div><!-- skill-card -->
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row skills-card">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">assignment</i>
						</span>
						<span class="column">
						Other Skills
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<%= link_to edit_user_path do %>
						<small>
						Edit
						</small>
						<i class="material-icons sub-menu">mode_edit</i>
					<% end %>
				<% end %>
				</div>
				<div class="column skills">
					<p>
				<% if @user.other_skills? %>
						<%= @user.other_skills %>
					<% else %>
					<% if current_user?(@user) %>
						<%= link_to edit_user_path do%>
						<span class="column">
						<small>
						"Update your other skills.."
						</small>
						</span>
						<span class="column">
						<i class="material-icons">mode_edit</i>
						</span>
						<% end %>
					<% else %>
						<span class="column">
						<small>
						"This user yet updated skills.."
						</small>
						</span>
						<span class="column righted">
						<i class="material-icons">info_outline</i>
						</span>
					<% end %>
				<% end %>
						</p>
					</div><!-- column other_skills -->
				</div><!-- row skill-card -->
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row howrudoing">
					<h3>
						<span class="column">
						<i class="material-icons">assignment</i>
						</span>
						<span class="column">
						How RUDoing?
						</span>
					</h3>
					<div class="row-90 centered questions">
					<% if @user.microposts.any? %>
					<%= render @surveys %>
					<% else %>
					<%= render 'shared/survey_form' %>
					<% end %>
					</div><!-- questions -->
				</div><!-- row -->
			</div><!-- grid-100 sticky-note end -->

			</div><!-- grid-60 -->

			<div class="screen-m screen-s spacer"></div>

			<%= render 'sidebar' %>

	</div><!-- columns grid-80 -->
	</div><!-- row -->
</section>



<section class="centered profile-section bottomfix">

	<div class="row">
		<div class="columns grid-80 centered clearfix">


		</div><!-- columns grid-80 centered -->
	</div><!-- row -->

	<div class="row">
		<div class="columns grid-80 centered clearfix">

		</div><!-- grid-80 centered -->
	</div><!-- row -->

	<div class="row">
		<div class="columns grid-80 centered clearfix">
		</div><!-- columns grid-90 centered -->
	</div><!-- row end -->


</section><!-- centered bottomfix -->

