<% provide(:title, @user.name) %>

<section class="centered profile-section">

<% if current_user?(@user) %>
<%#= render 'shared/micropost_form' %>
<%#= render 'shared/picture_form' %>
<%#= render 'shared/survey_form' %>
<% end %>

	<div class="row">
		<div class="columns grid-80 centered clearfix">
			<div class="grid-60">
				<div class="sticky-note first">
					<div id="numero2" class="row profile-card clearfix">
					<div class="grid-100">
						<div class="column profile-pic clearfix">
						
						<% if current_user?(@user) %>
						<%= link_to avatar_path(current_user) do %>
						<% if Rails.env.production? %>
						<%= if @user.picture?
								image_tag @user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% else %><%#-- if Rails.env.production --%>
						<%= if @user.picture?
								image_tag @user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% end %><%#-- if Rails.env.production? --%>
						<% end %><%#-- link_to avatar_path --%>

						<% else %><%#-- if current_user? --%>
						<% if Rails.env.production? %>
						<%= if @user.picture?
								image_tag @user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% else %><%#-- if Rails.env.production --%>
						<%= if @user.picture?
								image_tag @user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% end %><%#-- if Rails.env.production --%>
						<% end %><%#-- if current_user? --%>

						</div><!-- profile-pic -->

						<div class="grid-60">
						<div class="column taglines">
						<div class="row-100">
							<div class="column">
							<h2 class="user-name">
							<%= @user.name %>
							</h2>
							</div>
						</div><!-- row-100 -->
						</div><!-- taglines -->
						<div class="column righted">
							<% if current_user?(@user) %>
							<%= link_to setting_path(current_user) do %>
							<small>
							Settings
							</small>
							<i class="material-icons sub-menu">settings</i>
							<% end %>
							<% end %>
						</div><!-- column -->
						</div>

					<div class="taglines">
					<p class="location">
						<%= @user.location %>
					</p>
					<p class="headline">
						<%= @user.headline %>
					</p>
					<p class="industry">
						<%= @user.industry %>
					</p>
				<% if @user.linkedin? %>
				<p class="linkedin-url">
					<%= link_to @user.linkedin, class: "link-launch", target: "_blank" do %>
					<span class="column">
					<small>
					<%= @user.linkedin %>
					</small>
					</span>
					<span class="column">
					<i class="material-icons sub-menu">launch</i>
					</span>
					<% end %>
				<% end %>
				</p>
					<small>
					<%= render 'shared/stats' %>
					<%= render 'follow_form' if logged_in? %>
					</small>

					</div><!-- taglines -->
</div><!-- grid-100 -->
<div class="grid-100">
<div class="grid-100">
					<% if current_user.enthusiast? %>

					<div class="badge enthusiast">
					<span>
					<i class="material-icons">favorite</i>
					</span>
					<span class="label">
					Enthusiast
					</span>
					</div>
					<% end %>

					<% if current_user.skeptic? %>
					<div class="badge skeptic">
					<span>
					<i class="material-icons">search</i>
					</span>
					<span class="label">
					Skeptic
					</span>
					</div>
					<% end %>

					<% if current_user.pioneer? %>
					<div class="badge pioneer">
					<span>
					<i class="material-icons">near_me</i>
					</span>
					<span class="label">
					Pioneer
					</span>
					</div>
					<% end %>

					<% if current_user.navigator? %>
					<div class="badge navigator">
					<span>
					<i class="material-icons">explore</i>
					</span>
					<span class="label">
					Navigator
					</span>
					</div>
					<% end %>

					<% if current_user.coach? %>
					<div class="badge coach">
					<span>
					<i class="material-icons">spa</i>
					</span>
					<span class="label">
					Coach
					</span>
					</div>
					<% end %>

					<% if current_user.solo? %>
				<% if current_user?(@user) %>
					<%= link_to allies_path do %>
					<div class="badge solo">
					<span>
					<i class="material-icons sub-menu">add_box</i>
					</span>
					<span class="label">
					Join Ally
					</span>
					</div>
					<% end %>
				<% end %>	
					<% end %>
</div>
					<div class="grid-100 summary">
						<h3>
						Summary
						</h3>
					<p>
				<% if @user.summary? %>
					<%= @user.summary %>
				<% else %>
					<% if current_user?(@user) %>
					<%= link_to summary_path do%>
						<span class="column">
						<small>
						"Update your summary.."
						</small>
						</span>
						<% end %>
						<% else %>
						<span class="column italic sub-menu">
						<i class="material-icons sub-menu">info_outline</i>
						<small>
						"This user yat update summary.."
						</small>
						</span>
					<% end %>
				<% end %>
					</p>
					</div><!-- summary -->
</div><!-- grid-100 -->
					</div><!-- row profile-card -->

				<% if current_user?(@user) %>
					<div class="bottom text-center">
					<%= link_to edit_user_path do %>
					<span class="sub-menu">
					<small>
						Edit
					</small>
					</span>
					<i class="material-icons">mode_edit</i>
					<% end %>
				</div><!-- bottom end -->
				<% end %>
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<div id="numero3" class="sticky-note first">
				<div class="row work-experience">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">work</i>
						</span>
						<span class="column">
						Work Experience
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<%= link_to positions_new_path do %>
					<i class="material-icons sub-menu">add_box</i>
					<small>
					Add Experience
					</small>
					<% end %>
				<% end %>
				</div>

				<% if @user.positions.any? %>
				<%= render @positions %>
				<%= will_paginate @positions %>
				<% end %>

			</div><!-- row work-experience -->
			</div><!-- sticky-note end -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row skills-card">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">assignment_turned_in</i>
						</span>
						<span class="column">
						Skills
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<%= link_to skills_path do %>
						<small>
						Edit
						</small>
						<i class="material-icons sub-menu">mode_edit</i>
					<% end %>
				<% end %>
				</div>
						<div class="column skills">
						<p>
					<% if @user.skills? %>
						<%= @user.skills %>
					<% else %>
					<% if current_user?(@user) %>
						<%= link_to skills_path do%>
							<span class="column">
							<small>
							"Update your skills.."
							</small>
							</span>
						<% end %>
						<% else %>
						<span class="column italic sub-menu">
						<i class="material-icons sub-menu">info_outline</i>
						<small>
						"This user yat update summary.."
						</small>
						</span>
						<% end %>
					<% end %>
						</p>
						</div><!-- column skills -->
				</div><!-- skill-card -->
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<div class="sticky-note first">
				<div class="row skills-card">
				<div class="column">
					<h3>
						<span class="column">
						<i class="material-icons">assignment_turned_in</i>
						</span>
						<span class="column">
						Other Skills
						</span>
					</h3>
				</div>
				<div class="column righted clearfix">
				<% if current_user?(@user) %>
					<%= link_to skills_path do %>
						<small>
						Edit
						</small>
						<i class="material-icons sub-menu">mode_edit</i>
					<% end %>
				<% end %>
				</div>
				<div class="column skills">
					<p>
				<% if @user.other_skills? %>
						<%= @user.other_skills %>
					<% else %>
					<% if current_user?(@user) %>
						<%= link_to skills_path do%>
						<span class="column">
						<small>
						"Update your other skills.."
						</small>
						</span>
						<% end %>
					<% else %>
						<span class="column italic sub-menu">
						<i class="material-icons sub-menu">info_outline</i>
						<small>
						"This user yat update summary.."
						</small>
						</span>
					<% end %>
				<% end %>
						</p>
					</div><!-- column other_skills -->
				</div><!-- row skill-card -->
			</div><!-- sticky-note -->
			<div class="spacer"></div>
			<% if current_user?(@user) %>
			<div class="sticky-note first someclass">
				<div class="row howrudoing">
					<h3>
						<span class="column">
						<i class="material-icons">assignment</i>
						</span>
						<span class="column">
						How RUDoing?
						</span>
					</h3>
					<div class="row-90 centered questions survey-form">
					<% if @user.microposts.any? %>
					<%= render @surveys %>
					<% else %>
					<%= render 'shared/survey_form' %>
					<% end %>
					</div><!-- questions -->
				</div><!-- row -->
			</div><!-- sticky-note end -->
			<% end %>

			</div><!-- grid-60 -->

			<div class="screen-m screen-s spacer"></div>

			<%= render 'sidebar' %>

	</div><!-- columns grid-80 -->
	</div><!-- row -->
</section>

