<section class="centered index-section">
	<div class="row">
		<div class="columns grid-100 centered clearfix">
				<%= form_for User.find(params[:id]) do |f| %>
				<%= render 'shared/error_messages', object: @user %>

			<div class="row-80 centered form-field">
				<%= f.label :email %>
				<%= f.email_field :email, class: 'form-control' %>
			</div><!-- form-field -->
			<div class="row-80 centered form-field">
				<%= f.label :password %>
				<%= f.password_field :password, class: 'form-control' %>
			</div><!-- form-field -->
			<div class="row-80 centered form-field">
				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation, class: 'form-control' %>
			</div><!-- form-field -->


			<div class="row-80 centered form-field">
				<%= f.submit "Save changes", class: "button secondary extend" %>
				<% end %>
			</div><!-- form-field -->

		</div><!-- columns grid-80 -->
	</div><!-- row -->
</section>
