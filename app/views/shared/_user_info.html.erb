
			<div class="row profile-card">
			<div class="column">
						<% if Rails.env.production? %>
						<%= if current_user.picture?
								image_tag current_user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% else %>
						<%#= gravatar_for @user %>
						<%= if current_user.picture?
								image_tag current_user.picture.url, class: "profile-pic"
							else
								image_tag "profile-picture-default.png", class: "profile-pic"
							end %>
						<% end %>
			</div>
			<div class="column taglines">
			<h2 class="user-name">
					<%= link_to current_user do%>
					<%= current_user.name %>
					<% end %>
			</h2>
			<p class="location">
			San Francisco Bay Area
			</p>
			<p class="industry">
			IT Service
			</p>
			<p class="headline">
			Business Development
			</p>
			<p class="current-position">
			Partnership Program Manager
			</p>
			<small>
			<%#= render 'shared/stats' %>
			</small>
			</div>
			<div class="column righted clearfix">
			<% if current_user %>
				<%= link_to edit_user_path(current_user) do%>
				<small>
				Settings
				</small>
				<i class="material-icons sub-menu">settings</i>
				<% end %>
			<% end %>
			</div>
			</div><!-- row -->
			<div class="bottom text-center">
				<a href="#">
				<span class="sub-menu">
				More
				</span>
				<i class="material-icons">launch</i>
				</a>
			</div><!-- bottom end -->

