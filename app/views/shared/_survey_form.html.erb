
<%= form_for current_user.microposts.build do |f| %>
	<div class="row">
		<div class="columns grid-80 centered clearfix">
				<div class="grid-100 sticky-note first last">
					<h3 class="text-left">
					<span class="update">
					Do you believe ghost?
					</span>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :survey_1, placeholder: "Enter your answer here..." %>
					</div>
					<h3 class="text-left">
					<span class="update">
					Are you cat person or dog person?
					</span>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :survey_2, placeholder: "Enter your answer here..." %>
					</div>
					<h3 class="text-left">
					<span class="update">
					If you can own a planet in our solor system, which planet is going to be yours?
					</span>
					</h3>
					<div class="field">
					<%= render 'shared/error_messages', object: f.object %>
					<%= f.text_area :survey_3, placeholder: "Enter your answer here..." %>
					</div>
					<%= f.submit "Post", class: "button small secondary righted" %>
					<% end %>
				</div><!-- sticky-note -->
		</div><!-- columns grid-100 centered -->
	</div><!-- row end -->
