<%= form_for Ally.find(params[:id]) do |f| %>
	<div class="row-90 centered">
		<h3 class="text-left">
		<%= label_tag(:name, "ally Name", class: 'form-control') %>
		</h3>
		<div class="field">
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.text_field :name, class: 'form-control' %>
		</div><!-- field -->
	</div><!-- row-90 -->

	<div class="row-90 centered">
		<h3 class="text-left">
		<%= label_tag(:descriptions, "Industry", class: 'form-control') %>
		</h3>
		<div class="field">
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.text_area :descriptions, class: 'form-control' %>
		</div><!-- field -->
	</div><!-- row-90 -->

	<div class="row-90 centered question">
		<%= f.submit "Save", class: "button extend primary" %>
	</div><!-- question -->
<% end %>
