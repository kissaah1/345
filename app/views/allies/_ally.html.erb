<div id="ally-<%= ally.id %>" class="column my-ally">
	<div class="ally-profile">
	<div class="column ally-info">
		<p class="ally-name">
			<span class="column">
			<a href="../allies/<%= ally.id %>/show">
				<span class="column">
				<%= ally.name %>
				</span>
				<span class="column sub-menu">
				<i class="material-icons">launch</i>
				</span>
				</a>
			</span>
		</p>
	</div><!-- column ally-info -->

	<div class="column sub-menu righted clearfix">
		<% if current_user?(ally.user) %>
			<%#= link_to edit_ally_path do %>
			<a href="../allies/<%= ally.id %>/edit">
			<i class="material-icons">mode_edit</i>
			</a>
			<%# end %>
			<%= link_to ally, method: :delete, data: { confirm: "You sure?" } do %>
			<i class="material-icons">delete</i>
			<% end %>

		<% end %><%# if current_user? %>
	</div><!-- sub-menu -->

	<div class="column ally-info">
	<p class="ally-title">
		<%= ally.descriptions %>
	</p>

	</div><!-- ally-info -->
	</div><!-- ally-profile -->
</div><!-- ally -->