<% provide(:title, "Log In") %>
<section class="centered setting-section">
	<div class="row">
		<div class="columns grid-80 centered clearfix signup">

<%= form_for(:session, url: login_path) do |f| %>
			<div class="row-80 centered form-field">
			<%= link_to "auth/linkedin", class: "button linkedin extend" do%>
			<span class="column icon">
			</span>
			<span class="column">
			Log In with LinkedIn
			</span>
			<% end %>
			</div><!-- form-field -->
			<div class="row-80 centered form-field">
			<h4 class="email-form">
			<span class="column">
			Or
			</span>
			</h4>
			</div><!-- form-field -->
			<div class="row-80 centered form-field">
			<%= f.label :email %>
			<%= f.email_field :email, class: 'form-control' %>
			</div>
			<div class="row-80 centered form-field">
			<%= f.label :password %>
			<small>
			<%= link_to "(forgot password)", new_password_reset_path %>
			</small>
			<%= f.password_field :password, class: 'form-control' %>
			</div>
			<div class="row-80 centered form-field">
			<%= f.label :remember_me, class: "checkbox inline" do %>
			<%= f.check_box :remember_me %>
			<span>Remember me</span>
			<% end %>
			</div>
			<div class="row-80 centered form-field">
				<%= f.button :submit, class: "button secondary extend" do %>
					<span class="column">
					<i class="material-icons">email</i>
					</span>
					<span class="column">
					Log In
					</span>
				<% end %>
</div>
<div class="row-80 centered form-field">
<small>Don't have an account? <%= link_to "Sign Up", signup_path %></small>
</div>
<% end %>
		</div><!-- columns -->
	</div><!-- row -->
</section>